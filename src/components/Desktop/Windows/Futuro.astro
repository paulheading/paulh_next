---
import Window from '~components/Desktop/Window.astro'
import ThemeContent from '~components/Desktop/Window/Theme/Content.astro'
import { gem } from '~data/layout.json'
---

<Window {...Astro.props} class="window">
  <ThemeContent {...gem} class="content" color="dodgerblue" />
</Window>

<style lang="scss">
  .window {
    left: 8rem;
    top: 10rem;
  }

  .content {
    background-color: black;
    font-weight: normal;
    color: white;
  }
</style>
