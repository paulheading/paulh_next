---
import Window from "/src/components/desktop/window.astro";
import ThemeContent from "/src/components/desktop/window/theme/content.astro";
import { gem } from "/src/data/layout.json";
---

<Window {...Astro.props} class="window">
  <ThemeContent {...gem} class="content" color="dodgerblue" />
</Window>

<style lang="scss">
  .window {
    left: 8rem;
    top: 10rem;
  }

  .content {
    background-color: black;
    font-weight: normal;
    color: white;
  }
</style>
