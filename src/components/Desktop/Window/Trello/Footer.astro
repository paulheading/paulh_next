---
import previous from '~svg/previous.svg?raw'
import next from '~svg/next.svg?raw'
import { parse } from 'node-html-parser'
---

<footer>
  <button class="previous" title="previous projects page">
    {parse(previous)}
  </button>
  <div class="status"></div>
  <button class="next" title="next projects page">
    {parse(next)}
  </button>
</footer>

<style lang="scss" is:global>
  @import '~styles/mixins';

  @mixin button {
    background-color: white;
    justify-content: center;
    border: 1px solid black;
    align-items: center;
    border-radius: 50%;
    padding: 0.375rem;
    cursor: pointer;
    display: flex;

    @include focus {
      background-color: black;
      color: white;
    }

    svg {
      position: relative;
      fill: currentColor;

      @include medium-down {
        transform: rotate(90deg);
      }
    }

    &:disabled {
      visibility: hidden;
    }
  }

  footer {
    grid-template-columns: 1.875rem auto 1.875rem;
    padding: $padding-trello;
    align-items: center;
    text-align: center;
    display: grid;
  }

  .previous {
    @include button;

    svg {
      @include medium-up {
        left: -1px;
      }

      @include medium-down {
        top: -1px;
      }
    }
  }

  .next {
    @include button;

    svg {
      @include medium-up {
        right: -1px;
      }

      @include medium-down {
        bottom: -1px;
      }
    }
  }
</style>
